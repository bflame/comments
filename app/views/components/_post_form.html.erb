<script>
        function checkLength(edit, maxlen) 
          {
        if (edit.value.length > maxlen) 
        	edit.value = edit.value.substring(0, maxlen);
    
        document.getElementById('remaining').innerHTML = edit.value.length;
          }
</script>

<% if user_signed_in? %>
         <div class="panel panel-default post-form-panel">
             <div class="panel-body row">
                <div class="col-sm-1">
                   <img src="/profile.png" class="rounded-img" height="35px" width="35px"></img>
                </div>
                <div class="col-sm-11">
              
            <%= form_for(@newPost) do |f| %>
                
                  <div class="field" style="margin-left: 10px;" onKeyDown = "checkLength(this, 100);">
                    <%= f.text_field :content, autofocus: true, class: "form-control", :maxlength => 200 %>
                    <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Say Something", class: "btn btn-post" %></span>
                  </div>
                
                <% end %>
             </div>
            </div>
          </div>
<% end %>